{
  "annotations": { "list": [] },
  "editable": true,
  "panels": [
    {
      "title": "Active Workers",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "celery_workers_active",
          "legendFormat": "Workers"
        }
      ]
    },
    {
      "title": "Tasks Received Rate",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(celery_task_received_total[5m]))",
          "legendFormat": "Tasks/s"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" }
      }
    },
    {
      "title": "Task Success Rate",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "1 - (sum(rate(celery_task_failed_total[5m])) / sum(rate(celery_task_received_total[5m])))",
          "legendFormat": "Success Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.9 },
              { "color": "green", "value": 0.95 }
            ]
          }
        }
      }
    },
    {
      "title": "Queue Lengths",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "celery_queue_length",
          "legendFormat": "{{ queue }}"
        }
      ]
    },
    {
      "title": "Task Throughput by Type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(celery_task_received_total[5m])) by (name)",
          "legendFormat": "{{ name }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" }
      }
    },
    {
      "title": "Task Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(celery_task_runtime_seconds_bucket[5m])) by (le, name))",
          "legendFormat": "{{ name }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Failed Tasks by Type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "sum(rate(celery_task_failed_total[5m])) by (name)",
          "legendFormat": "{{ name }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops" }
      }
    },
    {
      "title": "Worker CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"imagineai\",pod=~\".*celery-worker.*\"}[5m])) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["imagineai", "celery", "workers"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "ImagineAI - Celery Workers",
  "uid": "imagineai-celery-workers"
}
