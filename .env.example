# ML
ML_MODEL_DIR=./backend/ml/weights
ML_CLASSIFICATION_THRESHOLD=0.5
ML_DEFECT_THRESHOLD=0.3
ML_AB_TEST_PERCENTAGE=10

# Rate Limiting
RATE_LIMIT_DEFAULT_PER_MINUTE=60
